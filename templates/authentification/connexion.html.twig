{% extends 'base.html.twig' %}

{% block body %}
    <div id="connexionDiv">
        <h1>Connexion</h1>

        <form action="{{ path('connexion') }}" method="post">
            <div id="connection_form">
                <label for="pseudo">Pseudo</label>
                <input type="text" id="pseudo" name="_username" value="{{ last_username }}"/>

                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password"/>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}
            </div>
            
            <button type="submit" id="seConnecterBtn" class="authentificationBtn">Se connecter</button>
        </form>
    </div>

    {% if error %}
        <div id="connexionErrorMessage">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

{% endblock %}